<h2>メンバー一覧</h2>

<%= link_to 'メンバーを登録', new_member_path %>

<table class="table table-striped table-condensed">
  <tr>
    <th>ID</th>
    <th>氏名</th>
    <th>ふりがな</th>
    <th>性別</th>
    <th>学年</th>
    <th>レベル</th>
    <th>戦型</th>
    <th>編集</th>
    <th>削除</th>
  </tr>

  <% @members.each do |member| %>
    <tr>
      <td><%= member.id %></td>
      <td><%= member.member_name %></td>
      <td><%= member.member_name_yomi %></td>
      <td><%= member.strfgender %></td>
      <td><%= member.school_year %></td>
      <td><%= member.rank.rank_name %></td>
      <td><%= member.type.type_name %></td>
      <td><%= link_to '編集', edit_member_path(member), class: 'btn btn-mini btn-info' %></td>
      <td><%= link_to '削除', "/members/#{member.id}", data: { method: 'delete', confirm: "#{member.member_name}さんを削除します。本当によろしいですか？" },  class: 'btn btn-mini btn-danger' %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'メンバーを登録', new_member_path %>
